{
  "name": "goodidea",
  "version": "1.0.0",
  "description": "Feedback and task management",
  "main": "index.js",
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/input.css -o ./kodata/main.css",
    "build:js": "esbuild src/*.js --bundle --minify --sourcemap --target=chrome85,firefox85,safari14 --outdir=kodata",
    "build": "npm run build:css && npm run build:js",
    "lint": "npx @biomejs/biome lint ./src/*.js",
    "fix": "npx @biomejs/biome check --apply ./src/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lwileczek/goodidea.git"
  },
  "keywords": [
    "feedback",
    "tasks",
    "management"
  ],
  "author": "lwileczek",
  "license": "BSD3",
  "bugs": {
    "url": "https://github.com/lwileczek/goodidea/issues"
  },
  "homepage": "https://github.com/lwileczek/goodidea#readme",
  "devDependencies": {
    "@biomejs/biome": "1.3.1",
    "esbuild": "0.19.5",
    "tailwindcss": "^3.3.5"
  }
}
